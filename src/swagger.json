{
  "openapi": "3.0.3",
  "info": {
    "title": "Documentação da minha API",
    "description": "Documentação da Minha API com todas as especificações",
    "version": "1.0.0",
    "contact": {
      "name": "Graciliano Barroso",
      "email": "gracilianobm@hotmail.com"
    }
  },
  "paths":{
    "/roles": {
      "post": {
        "tags": ["Papeis"],
        "summary": "Criar um Papel",
        "description": "Criar um novo papel",
        "requestBody": {
          "content": {
            "aplication/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string"
                  },
                  "idade": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Papel criado.",
            "content": {
              "aplication/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "nome": {
                      "type": "string"
                    },
                    "idade": {
                      "type": "number"
                    },
                    "criado_em": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "O papel já existe."
          }
        }
      },
      "get": {
        "tags": ["Papeis"],
        "summary": "Lista de todos os papeis",
        "description": "Retorna todas as funções paginadas",
        "parameters": [
          {
            "name": "página",
            "in": "consulta",
            "description": "Número da página",
            "required": false,
            "schema": {
              "type": "número",
              "example": "página=1"
            },
            "style": "label"
          },
          {
            "name": "limite",
            "in": "consulta",
            "description": "Número de registros por página",
            "required": false,
            "schema": {
              "type": "número",
              "example": "limite=15"
            },
            "style": "rótulo"
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso.",
            "content": {
              "aplication/json": {
                "example": {
                  "por_pagina": 15,
                  "total": 2,
                  "pagina_atual": 1,
                  "dados": [
                    {
                      "id": "c45da3e7-33f3-4725-bb11-b1047b4548fe",
                      "nome": "Graciliano B Moraes",
                      "idade": 42,
                      "criado_em": "2023-03-13T16:47:29.000Z"
                    },
                    {
                      "id": "d7d393ae-154a-47e6-b3d4-a177184e24d6",
                      "nome": "Graciliano Barroso",
                      "idade": 42,
                      "criado_em": "2023-03-13T16:47:39.000Z"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/roles/{id}": {
      "put": {
        "tags": ["Papeis"],
        "summary": "Atualizar um papel",
        "description": "Atualizar um papel.",
        "parameters": [
          {
            "name": "id",
            "in": "caminho",
            "description": "Identificar um papel",
            "required": true,
            "schema": {
              "type": "cadeia de caracteres"
            },
            "style": "rótulo"
          }
        ],
        "requestBody": {
          "content": {
            "aplication/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type":"string"
                  },
                  "idade": {
                    "type":"number"
                  }
                },
                "example": "Administrador"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sucesso.",
            "content": {
              "aplication/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "nome": {
                      "type": "string"
                    },
                    "idade": {
                      "type": "number"
                    },
                    "criado_em": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "id": "74c8f2c7-5d9d-4c80-872c-c4f619fe6e78",
                  "name": "Administrador",
                  "created_at": "2022-07-16T14:10:48.000Z"
                }
              }
            }
          },
          "400": {
            "description": "Requisição inválida."
          },
          "404": {
            "description": "Papel não encontrado."
          }
        }
      },
      "get": {
        "tags": ["Papeis"],
        "summary": "Encontrar papel por ID",
        "description": "Retorna papeis com base no ID.",
        "parameters": [
          {
            "name": "id",
            "in": "caminho",
            "description": "Identificação de um papel",
            "required": true,
            "schema":{
              "type":"cadeia de caracteres"
            },
            "style": "label"
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso.",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "id":{
                      "type":"string"
                    },
                    "nome":{
                      "type":"string"
                    },
                    "idade":{
                      "type":"number"
                    },
                    "created_at":{
                      "type":"string"
                    }
                  }
                },
                "example": {
                  "id": "74c8f2c7-5d9d-4c80-872c-c4f619fe6e78",
                  "name": "Administrador",
                  "created_at": "2022-07-16T14:10:48.000Z"
                }
              }
            }
          },
          "400":{
            "description": "Requisição inválida."
          },
          "404": {
            "description": "Papel não encontrado."
          }
        }
      },
      "delete": {
        "tags": ["Papeis"],
        "summary": "Excluir papel por ID",
        "description": "Excluir papeis com base no ID.",
        "parameters": [
          {
            "name": "id",
            "in": "caminho",
            "description": "Identificação de um papel",
            "required": true,
            "schema":{
              "type":"cadeia de caracteres"
            },
            "style": "label"
          }
        ],
        "responses": {
          "204": {
            "description": "Sem conteúdo."
          },
          "400":{
            "description": "Requisição inválida."
          },
          "404": {
            "description": "Papel não encontrado."
          }
        }
      }
    }
  }
}
